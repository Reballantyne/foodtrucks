<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="445dp"
        android:layout_row="2"
        android:layout_column="0"
        android:weightSum="1"
        android:background="#ccb1b2a7"
        android:id="@+id/linearLayoutParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#ccb1b2a7">

            <Space
                android:layout_width="10dp"
                android:layout_height="36dp"
                android:id="@+id/space" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="362dp"
                android:layout_height="68dp"
                android:layout_toRightOf="@+id/space"
                android:layout_toStartOf="@+id/genre"
                android:weightSum="1"
                android:layout_alignBottom="@+id/space"
                android:id="@+id/linearLayout"
                android:layout_toLeftOf="@+id/genre">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Name of Food Truck"
                    android:id="@+id/name"
                    android:textColor="#ff030303"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <Space
                android:layout_width="10dp"
                android:layout_height="86dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/space2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="17336 NE 34th ST, Redmond, WA"
                android:id="@+id/address"
                android:layout_below="@+id/linearLayout"
                android:layout_toRightOf="@+id/space"
                android:layout_toEndOf="@+id/space"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Hours Today: 11 AM - 12 PM"
                android:id="@+id/hoursToday"
                android:layout_below="@+id/address"
                android:layout_alignLeft="@+id/address"
                android:layout_alignStart="@+id/address"
                android:textColor="#ff000000"
                android:layout_alignParentBottom="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Closed"
                android:id="@+id/oC"
                android:textColor="#ffd81b27"
                android:layout_alignTop="@+id/hoursToday"
                android:layout_toLeftOf="@+id/space2"
                android:layout_toStartOf="@+id/space2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Genre"
                android:id="@+id/genre"
                android:textColor="#ff000000"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_toLeftOf="@+id/space2"
                android:layout_toStartOf="@+id/space2"
                android:layout_marginBottom="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/isHealthy"
                android:layout_below="@+id/linearLayout"
                android:layout_alignRight="@+id/oC"
                android:layout_alignEnd="@+id/oC" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ccb1b2a7"
            android:id="@+id/allbuttons"
            android:weightSum="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Call"
                android:id="@+id/callTruck"
                android:layout_marginLeft="7dp"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="callTruck" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:text="Menu"
                android:id="@+id/button5"
                android:gravity="center_vertical|center_horizontal" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Favorite"
                android:id="@+id/favorite"
                android:gravity="center_vertical|center_horizontal" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Website"
                android:id="@+id/viewWebsite"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="viewWebsite" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="#ccb1b2a7">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/PictureBox"
                android:src="@drawable/veg1"
                android:onClick="photoClick"
                android:background="#ccb1b2a7"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Reviews"
            android:background="#ccb1b2a7">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Reviews"
                android:id="@+id/ReviewClick"
                android:layout_marginLeft="10dp"
                android:textColor="#ff000000"
                android:onClick = "seeMoreReviews"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_row="3"
        android:layout_column="0"
        android:background="#ff318e21">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/search"
            android:layout_weight="0.25"
            android:background="@android:color/transparent"
            android:src="@drawable/search"
            android:contentDescription="searchButton"
            android:onClick="goSearch" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton2"
            android:layout_weight="0.25"
            android:background="@android:color/transparent"
            android:src="@drawable/map"
            android:contentDescription="mapButton"
            android:onClick="goMap" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton3"
            android:layout_weight="0.25"
            android:src="@drawable/favorites"
            android:background="@android:color/transparent"
            android:contentDescription="favoritesButton"
            android:onClick="goFavorite" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton4"
            android:layout_weight="0.25"
            android:src="@drawable/specials"
            android:background="@android:color/transparent"
            android:contentDescription="specialsButton"
            android:onClick="goSpecials" />

        </LinearLayout>

</GridLayout>
