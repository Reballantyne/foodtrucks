<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.Specials">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#ff4d8be6"
            android:weightSum="1"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Specials"
                android:id="@+id/textView3"
                android:gravity="center_vertical|center_horizontal"
                android:background="#ff318e21"
                android:textStyle="bold"
                android:textSize="22dp" />
        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="315dp"
            android:id="@+id/listView2"
            android:layout_row="2"
            android:layout_column="0"
            android:background="#ccb1b2a7"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:layout_row="3"
            android:layout_column="0"
            android:background="#ff318e21"
            android:weightSum="1" >

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/goSearch"
                android:layout_weight="0.25"
                android:background="@android:color/transparent"
                android:src="@drawable/search"
                android:contentDescription="searchButton"
                android:onClick="goSearch" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/goMap"
                android:layout_weight="0.25"
                android:background="@android:color/transparent"
                android:src="@drawable/map"
                android:contentDescription="mapButton"
                android:onClick="goMap" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/goFavorites"
                android:layout_weight="0.25"
                android:src="@drawable/favorites"
                android:background="@android:color/transparent"
                android:contentDescription="favoritesButton"
                android:onClick="goFavorites" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton8"
                android:layout_weight="0.25"
                android:src="@drawable/specials"
                android:background="@android:color/transparent"
                android:contentDescription="specialsButton" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
